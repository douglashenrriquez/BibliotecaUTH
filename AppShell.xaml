<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:BibliotecaUTH"
       xmlns:views="clr-namespace:BibliotecaUTH.Views"
       x:Class="BibliotecaUTH.AppShell">

    <FlyoutItem Title="Inicio" Icon="icon_home.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Nuevo Autor" Icon="icon_add.png">
        <ShellContent ContentTemplate="{DataTemplate views:NuevoAutorPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Lista de Autores" Icon="icon_list.png">
        <ShellContent ContentTemplate="{DataTemplate views:AutoresPage}" />
    </FlyoutItem>
</Shell>
