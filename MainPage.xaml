<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaUTH.MainPage"
             Title="BibliotecaUTH"
             BackgroundColor="#f5f5f5">
    <ContentPage.Content>
        <Grid Padding="20" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Text="Agregar Nuevo Autor" 
                    Clicked="OnNuevoAutorClicked" 
                    BackgroundColor="#34C759"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="10"
                    Grid.Row="0"/>

            <Button Text="Ver Lista de Autores" 
                    Clicked="OnAutoresClicked" 
                    BackgroundColor="#34C759" 
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="10"
                    Grid.Row="1"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
